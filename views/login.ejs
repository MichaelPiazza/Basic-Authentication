<% include ../partials/header %>

<div class="ui container" id="center-align">
        <% if(message && message.length > 0) { %>
            <div class="ui danger message">
                <%= message %>
            </div>
        <% } %>
    <div class="ui segment">
        <h1 class="ui dividing header">Login</h1>
        <form class="ui form" action="/user/login" method="POST">
            <div class="field">
                <label>Username</label>
                <div class="ui left icon input">
                    <input type="text" name="username" id="username" placeholder="" required>
                    <i class="user plus icon"></i>
                </div>
            </div>
            <div class="field">
                <label>Password</label>
                <div class="ui left icon input">
                    <input type="password" name="password" id="password" placeholder="" required>
                    <i class="key icon"></i>
                </div>

            </div>
            <button class="ui fluid primary button">Login</button>
        </form>
    </div>
    <div class="ui segment">
        <p>Not a user? <a href="#">Register</a> </p>
    </div>
</div>
<% include ../partials/footer %>